<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".View.User_Notes">

    <TextView
        android:id="@+id/tv_totalExpence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:layout_marginLeft="10dp"
        style="@style/TextAppearance.AppCompat.Title"
        android:drawableStart="@drawable/ic_rupee"
        android:textSize="50dp"
        android:background="@drawable/background_layout"
        android:padding="5dp"
        android:textStyle="bold"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_Leftcash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_weight="1"
        android:background="@drawable/background_layout"
        android:layout_below="@+id/tv_totalExpence"
        android:layout_marginLeft="10dp"
        android:drawableStart="@drawable/ic_rupee"
        android:textSize="16dp"

        android:textStyle="bold"/>


    <LinearLayout
        android:visibility="gone"
        android:layout_below="@+id/tv_Leftcash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="2dp"
        android:background="@drawable/background_layout"
        android:id="@+id/ll"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/id_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:entries="@array/spinner"
            android:padding="10dp"
            />


        <TextView
            android:id="@+id/txt_budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            style="@style/TextAppearance.AppCompat.Body2"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="16dp"
            android:layout_margin="10dp"
            android:textStyle="bold"/>





    </LinearLayout>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_savednotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll"
        android:layout_marginTop="20dp"
       />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_addnotes"
            style="@style/Widget.Material3.FloatingActionButton.Large.Tertiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#1E88E5"
            android:text="Add Notes"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:icon="@drawable/ic_add"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.895" />

        <ImageView
            android:id="@+id/viewhistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/background_layout"
            android:padding="5dp"
            android:src="@drawable/ic_history"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>